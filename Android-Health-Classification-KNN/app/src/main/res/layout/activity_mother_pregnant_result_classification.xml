<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:focusableInTouchMode="true"
    tools:context=".mvp.motherpregnantresultclassification.MotherPregnantResultClassificationActivity">

    <Button
        android:id="@+id/mprca_btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/selector_button"
        android:text="FILTER"
        app:layout_constraintBottom_toBottomOf="@id/mprca_edt_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mprca_edt_search" />

    <EditText
        android:id="@+id/mprca_edt_search"
        style="@style/style_edittext_field"
        android:layout_width="0dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:visibility="invisible"
        android:enabled="false"
        android:hint="Cari"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mprca_btn_filter"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/mprca_group_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="mprca_btn_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mprca_rv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mprca_edt_search"
        tools:listitem="@layout/item_toddler_classification" />

    <Button
        android:id="@+id/mprca_btn_presentase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="JUMLAH DATA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mprca_btn_print_to_excel"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/mprca_btn_print_to_excel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="UNDUH DATA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mprca_btn_presentase" />

    <FrameLayout
        android:id="@+id/mprca_frame_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mprca_iv_empty_box"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_empty_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mprca_group_search" />

    <TextView
        android:id="@+id/mprca_tv_empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak Ada Data"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mprca_iv_empty_box" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/mprca_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="mprca_iv_empty_box,mprca_tv_empty_list"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>